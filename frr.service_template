[Unit]
Description=FRR Container Service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
StartLimitBurst=3
StartLimitInterval=60s
Restart=always
RestartSec=15
ExecStartPre=-{{shellPath}} {{scriptPath}}/frr.stop.sh
ExecStart={{shellPath}} {{scriptPath}}/frr.start.sh
ExecStop={{shellPath}} {{scriptPath}}/frr.stop.sh

[Install]
WantedBy=multi-user.target
